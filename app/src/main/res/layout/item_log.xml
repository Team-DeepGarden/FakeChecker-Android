<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/log_iv_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_nonestate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/log_tv_timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="시간"
        android:textColor="@color/app_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/log_tv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/log_iv_thumbnail"
        app:layout_constraintTop_toTopOf="@id/log_iv_thumbnail" />

    <TextView
        android:id="@+id/log_tv_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:hint="결과"
        android:textColor="@color/app_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/log_iv_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/log_iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/log_tv_result" />
</androidx.constraintlayout.widget.ConstraintLayout>
