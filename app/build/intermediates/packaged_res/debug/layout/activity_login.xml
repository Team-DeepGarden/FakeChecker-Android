<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".login.LogInActivity">

        <LinearLayout
            android:id="@+id/login_ll_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_big_logo"
                app:tint="@color/app_darknavy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Fakechecker"
                android:textColor="@color/app_darkgray"
                android:textSize="20sp" />

            <TextView
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="로그인"
                android:textColor="@color/app_darkgray"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="아이디"
            android:textColor="@color/app_darknavy"
            app:layout_constraintStart_toStartOf="@+id/login_ll_intro"
            app:layout_constraintTop_toBottomOf="@+id/login_ll_intro" />

        <EditText
            android:id="@+id/login_et_id"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:background="@drawable/ic_edittext"
            android:maxLength="20"
            android:paddingLeft="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_tv_id" />

        <TextView
            android:id="@+id/login_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="비밀번호"
            android:textColor="@color/app_darknavy"
            app:layout_constraintStart_toStartOf="@+id/login_ll_intro"
            app:layout_constraintTop_toBottomOf="@id/login_et_id" />

        <EditText
            android:id="@+id/login_et_password"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_edittext"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_tv_password" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn_enter"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/poppins_bold"
            android:text="로그인하기"
            android:textColor="@color/app_white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_et_password" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="뒤로가기"
            android:textColor="@color/app_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn_enter" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
