<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageButton
        android:id="@+id/bottomsheet_ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/bottomsheet_btn_question1"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="이 앱은 어떤 기능을 제공하나요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_ib_back" />

    <android.widget.Button
        android:id="@+id/bottomsheet_btn_question2"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:fontFamily="@font/poppins_bold"
        android:text="앱 사용 방법을 알려주세요."
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question3"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="딥페이크란 무엇인가요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question4"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="딥페이크 영상의 특징은 무엇인가요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question5"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="딥페이크 영상을 어떻게 식별할 수 있나요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question6"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="딥페이크 관련 법률에는 무엇이 있나요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question7"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="딥페이크 영상을 발견했을 때\n신고 방법을 알려주세요."
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question8"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="딥페이크 탐지 정확도는 얼마나 되나요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottomsheet_btn_question9"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_button"
        android:backgroundTint="@null"
        android:fontFamily="@font/poppins_bold"
        android:text="앱 사용에 문제가 발생하면 어떻게 하나요?"
        android:textColor="@color/app_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomsheet_btn_question8" />
</androidx.constraintlayout.widget.ConstraintLayout>